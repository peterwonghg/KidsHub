<div class="container">
  <div class="row">

    <div class="col-md-6">
      <div class="text-start mt-4 mb-4 d-flex">
        <h2>Login</h2>

        <form class="form col-9 login-form">
          <div class="form-group mt-5">
            <label for="email-login">Email:</label>
            <input class="form-control" type="text" id="email-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
          </div>
        </form>
      </div>
    </div>


    <div class="col-md-6">
      <div class="text-start mt-4 mb-4 d-flex">
        <h2>Signup</h2>

        <form class="form col-9 signup-form">
          <div class="form-group mt-5">
            <label for="name-signup">Name:*</label>
            <input class="form-control" type="text" id="name-signup" />
          </div>
          <div class="form-group">
            <label for="email-signup">Email:*</label>
            <input class="form-control" type="text" id="email-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password:*</label>
            <input class="form-control" type="password" id="password-signup" />
          </div>
          <div class="form-group">
            <label for="age-signup">Age:*</label>
            <input class="form-control" type="text" id="age-signup" />
          </div>
          <div class="form-group">
            <label for="hobby-signup">Hobby:*</label>
            <input class="form-control" type="text" id="hobby-signup" />
          </div>
          <div class="form-group">
            <label for="favorite_subject-signup">Favorite Subject:*</label>
            <input class="form-control" type="text" id="favorite_subject-signup" />
          </div>
          <div class="form-group">
            <label for="gender-signup">Gender: (eg. boy, girl)</label>
            <input class="form-control" type="text" id="gender-signup" />
          </div>
          <div class="form-group">
            <label for="favorite_food-signup">Favorite Food:</label>
            <input class="form-control" type="text" id="favorite_food-signup" />
          </div>
          <div class="form-group">
            <label for="favorite_sport-signup">Favorite Sport:</label>
            <input class="form-control" type="text" id="favorite_sport-signup" />
          </div>
          <div class="form-group">
            <label for="favorite_animal-signup">Favorite Animal:</label>
            <input class="form-control" type="text" id="favorite_animal-signup" />
          </div>
          <div class="form-group">
            <label for="favorite_subject-signup">Favorite Subject:</label>
            <input class="form-control" type="text" id="favorite_subject-signup" />
          </div>
          <div class="form-group">
            <label for="hidden_talent-signup">Hidden Talent:</label>
            <input class="form-control" type="text" id="hidden_talent-signup" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Signup</button>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/login.js"></script>
  </div>