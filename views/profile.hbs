{{#*inline "profile"}}

<body>
  <div class="container">
    <div class="row justify-content-center mt-4">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title text-center">{{name}}</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <img src="..." class="img-fluid rounded-start" alt="Profile Picture">
              </div>
              <div class="col-md-8">
                <div class="row">
                  <div class="col-md-6">
                    <p class="mb-2"><strong>Email:</strong> {{email}}</p>
                    <p class="mb-2"><strong>Age:</strong> {{age}}</p>
                    <p class="mb-2"><strong>Gender:</strong> {{gender}}</p>
                  </div>
                  <div class="col-md-6">
                    <ul class="list-unstyled">
                      <li class="mb-2"><strong>Hobby:</strong> {{hobby}}</li>
                      <li class="mb-2"><strong>Favorite Food:</strong> {{favorite_food}}</li>
                      <li class="mb-2"><strong>Favorite Sport:</strong> {{favorite_sport}}</li>
                      <li class="mb-2"><strong>Favorite Subject:</strong> {{favorite_subject}}</li>
                      <li class="mb-2"><strong>Favorite Animal:</strong> {{favorite_animal}}</li>
                      <li class="mb-2"><strong>Hidden Talent:</strong> {{hidden_talent}}</li>
                      <li class="mb-2"><strong>Registration Date:</strong> {{formatRegistrationDate registration_date}}
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row mt-4">
      <div class="col-md-12">
        <h2 class="mt-4">Enrolled Skills</h2>
        <div class="row">
          {{#each skills as |skill|}}
          <a href="/skills/{{id}}" class="col-md-6" style="display: block; color: inherit; text-decoration: none;">
            <div class="skill-panel bg-cards" style="background-color:{{background_color}}">
              <div class="skill-panel-body">
                <div class="row">
                  <div class="col-sm-3">
                    <img src="{{image_url}}" alt="{{title}}" class="skill-image">
                  </div>
                  <div class="col-sm-9">
                    <h3>{{title}}</h3>
                    <p><strong>{{subtitle}}</strong></p>
                    <p><strong>Price:</strong> ${{price}}</p>
                    <p><strong>Difficulty:</strong> {{difficulty_rating}}</p>
                    <p><strong>Date:</strong> {{formatRegistrationDate start_date}} - {{formatRegistrationDate end_date}} </p>
                    <p><strong>Contact:</strong> {{contact}}</p>
                    <p><strong>Location:</strong> {{place}}</p>
                    <p><strong>Address:</strong> {{address}}</p>
                  </div>
                </div>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  {{/inline}}
  {{>profile}}